@model IEnumerable<Category>

    <li class="dropdown">
        <a asp-controller="Recipe"
           asp-action="Index"
          class="dropdown-toggle" data-toggle="dropdown">Recipes <b class="caret"></b></a>
        <ul class="dropdown-menu">
            @foreach (var category in Model)
            { 
                <li>
                    <a asp-controller="Recipe" asp-action="List" asp-route-category="@category.Name">@category.Name</a>
                </li>
            }
            <li class="divider"></li>
            <li>
                <a asp-controller="Recipe" asp-action="List" asp-route-category="">View All Categories</a>
            </li>
        </ul>
    </li>