@model RecipeGist.ViewModels.RecipesListViewModel;
<!DOCTYPE html>
<html lang="en">
<head>
    <title></title>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
</head>
<body>
    <h1>@Model.CurrentCategory</h1>
    @foreach (var recipe in Model.Recipes)
    { 
        <div>
            <h2>@recipe.Name</h2>
            <h3>@recipe.Description</h3>
            <h4>@recipe.Category.Description</h4>
        </div>
    }
</body>
</html>